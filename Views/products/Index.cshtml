@model IEnumerable<hanami.Models.product>
@{
    ViewBag.Title = "Menu";
}
<h1>Catégories des produits</h1>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#panier">
    Votre Panier
</button>
<div class="container">
    @* Sushi Menu *@
    <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#sushi">Sushi</button>
    <div id="sushi" class="collapse">
        <table class="table" id="sushies">
            <tr>
                <th>Catégorie</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Référence</th>
                <th>Illustration</th>
            </tr>
            @foreach (var item in Model.Where(x => x.category.name_category == "Sushi"))
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.category.name_category)</td>
                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                    <td>@Html.DisplayFor(modelItem => item.description)</td>
                    <td>@Html.DisplayFor(modelItem => item.price) €</td>
                    <td>@Html.DisplayFor(modelItem => item.reference)</td>
                    <td><img src="@Url.Content(item.url_image)" /></td>
                    <td><button onclick="order()">Commander / Ajouter au panier</button></td>
                </tr>
            }
        </table>
    </div>
    @* Maki Menu *@
