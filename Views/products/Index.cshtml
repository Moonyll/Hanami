@model IEnumerable<hanami.Models.product>
@{
    ViewBag.Title = "Menu";
}
<h1 class="btn-info text-center desc">Bienvenue Au Hanami Sushi Bar !</h1>
<hr />
<img src="~/img/back.jpg" class="center-block desc" alt="hamami">
<hr />
<h2 class="btn-primary text-center desc">
Hanami Sushi Bar vous accueille dans son petit restaurant pour y savourer des spécialités japonaises comme les sushis d'une extrême fraîcheur.
</h2>
<h3 class="btn-info text-center desc">Découvrez nos produits ci-dessous dans chaque catégorie</h3>
<hr />
<div class="container center-block">
    @* Sushi Menu *@
    <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#sushi">Sushi</button>
    <div id="sushi" class="collapse">
        <table class="table" id="sushies">
            <tr>
                <th hidden>Catégorie</th>
                <th>Nom</th>
                <th>Illustration</th>
                <th>Description</th>
                <th>Prix (&euro;)</th>
                <th hidden>Quantité</th>
                <th hidden>Référence</th>
            </tr>
            @foreach (var item in Model.Where(x => x.category.name_category == "Sushi"))
            {
                <tr id="rowToClone">
                    <td hidden>@Html.DisplayFor(modelItem => item.category.name_category)</td>
                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                    <td><img src="@Url.Content(item.url_image)" /></td>
                    <td>@Html.DisplayFor(modelItem => item.description)</td>
                    <td>@Html.DisplayFor(modelItem => item.price)</td>
                    <td hidden><input type="number" name="quantity" min="1" max="50" /></td>
                    <td hidden>@Html.DisplayFor(modelItem => item.reference)</td>
                    <td><input type="button" value="Commander / Ajouter au panier" onclick="order_sushies(this)" /></td>
                </tr>
            }
        </table>
    </div>
