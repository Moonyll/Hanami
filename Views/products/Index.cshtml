@model IEnumerable<hanami.Models.product>

@{
    ViewBag.Title = "Menu";
}

<h1>Catégories des produits</h1>
<div class="container">
    <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#sushi">Sushi</button>
    <div id="sushi" class="collapse">
        <table class="table">
            <tr>
                <th>
                    Catégorie
                </th>
                <th>
                    Nom
                </th>
                <th>
                    Description
                </th>
                <th>
                    Prix (Euros TTC)
                </th>
                <th>
                    Référence
                </th>
                <th>
                    Illustration
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Where(x => x.category.name_category == "Sushi"))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.category.name_category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.reference)
                    </td>
                    <td>
                       <img src="@Url.Content(item.url_image)" />
                    </td>
                    <td>
                        @Html.ActionLink("Commander / Ajouter au panier", "Edit", new { id = item.id_product })
