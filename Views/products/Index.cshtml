</div>
<!-- Modal Pour Le Panier -->
<div class="modal fade" id="panier" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Récapitulatif de votre commande</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table" id="orders">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Réference</th>
                            <th>Quantité</th>
                            <th>Prix (Euros TTC)</th>
                            <th>Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>product name</td>
                            <td>product ref</td>
                            <td><input type="number" name="quantity" min="1" max="50" /></td>
                            <td>product price</td>
                            <td><button type="button"> retirer produit</button></td>
                        </tr>
                    </tbody>
                </table>
                Prix total panier : valeur totale
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/script.js"></script>