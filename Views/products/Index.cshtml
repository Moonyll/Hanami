<!-- Modal Pour Le Panier -->
<div class="modal fade" id="panier" tabindex="-1" role="dialog" aria-labelledby="modalLab" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h1 class="modal-title text-center" id="modalLab">Récapitulatif de votre commande</h1>
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>*@
            </div>
            <div class="modal-body">
                <table class="table" id="orders">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Référence</th>
                            <th>Quantité</th>
                            <th></th>
                            <th></th>
                            <th>Prix</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td hidden>product name</td>
                            <td hidden>product ref</td>
                            <td hidden><input type="number" name="quantity" min="1" max="50" /></td>
                            <td></td>
                            <td></td>
                            <td hidden>product price</td>
                            <td hidden><button type="button">retirer produit</button></td>
                        </tr>
                    </tbody>
                </table>
                <hr />
                <div id="invoice" class="text-center"></div>
            </div>
            <div class="modal-footer bg-primary">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Retour</button>
                <button type="button" class="btn btn-info" onclick="total()">Actualiser Panier</button>
            </div>
        </div>
    </div>
</div>
